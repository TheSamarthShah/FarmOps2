
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
	<div class="cont container-fluid right-panel-active" id="container">
	<div class="form-container sign-up-container">
		<form class="signupForm" method="post" asp-controller="SignUp" asp-action="Index" enctype="multipart/form-data">
			<h1 class="h1">Create Account</h1>

			<!-- PAGE 1: BASIC DETAILS -->
			<div id="page1">
				<div class="row">
					<div class="col-md-6">
						<input type="email" name="Email" class="form-style input form-control" placeholder="Email" required />
					</div>
					<div class="col-md-6">
						<input type="password" name="Password" class="form-style input form-control" placeholder="Password" required />
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<select name="Type" class="form-style input form-control" required>
							<option value="">-- Select Type --</option>
							<option value="M">Monitor</option>
							<option value="S">Supervisor</option>
							<option value="W">Worker</option>
							<option value="C">Grower</option>
						</select>
					</div>
					<div class="col-md-6">
						<input type="text" name="FirstName" class="form-style input form-control" placeholder="First Name" required />
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<input type="text" name="LastName" class="form-style input form-control" placeholder="Last Name" required />
					</div>
					<div class="col-md-6">
						<input type="text" name="MiddleName" class="form-style input form-control" placeholder="Middle Name" />
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<input type="text" name="Phone" class="form-style input form-control" placeholder="Phone" required />
					</div>
					<div class="col-md-6">
						<input type="date" name="Dob" class="form-style input form-control" required />
					</div>
				</div>

				<div class="row">
					<div class="col text-end mt-3">
						<button type="button" class="btn btn-primary" onclick="goToPage(2)">Next &gt;</button>
					</div>
				</div>
			</div>

			<!-- PAGE 2: WORK/BANK DETAILS -->
			<div id="page2" style="display:none;">
				<div class="row">
					<div class="col-md-6">
						<input type="text" name="PassportNumber" class="form-style input form-control" placeholder="Passport Number" />
					</div>
					<div class="col-md-6">
						<input type="number" name="PayRate" class="form-style input form-control" placeholder="Pay Rate" />
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<input type="text" name="Ird" class="form-style input form-control" placeholder="IRD" />
					</div>
					<div class="col-md-6 d-flex align-items-center">
						<div class="form-check">
							<input type="checkbox" name="ForkliftCert" class="form-check-input" />
							<label class="form-check-label">Forklift Certified</label>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<input type="text" name="Ir330" class="form-style input form-control" placeholder="IR330" />
					</div>
					<div class="col-md-6">
						<input type="text" name="Licence" class="form-style input form-control" placeholder="Licence" />
					</div>
				</div>

				<div class="row">
					<div class="col-md-6 d-flex align-items-center">
						<div class="form-check">
							<input type="checkbox" name="WorkAuth" class="form-check-input" />
							<label class="form-check-label">Work Authorized</label>
						</div>
					</div>
					<div class="col-md-6">
						<input type="text" name="WorkType" class="form-style input form-control" placeholder="Work Type" />
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<input type="number" name="WorkEvId" class="form-style input form-control" placeholder="Work Event ID" />
					</div>
					<div class="col-md-6">
						<input type="text" name="AccNum" class="form-style input form-control" placeholder="Account Number" />
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<input type="text" name="PayrollId" class="form-style input form-control" placeholder="Payroll ID" />
					</div>
					<div class="col-md-6">
						<input type="text" name="PreEmployment" class="form-style input form-control" placeholder="Pre-Employment Info" />
					</div>
				</div>

				<div class="row mt-3">
					<div class="col-md-6">
						<button type="button" class="btn btn-secondary" onclick="goToPage(1)">&lt; Back</button>
					</div>
					<div class="col-md-6 text-end">
						<button type="button" class="btn btn-primary" onclick="goToPage(3)">Next &gt;</button>
					</div>
				</div>
			</div>

			<!-- PAGE 3: DOCUMENT UPLOADS -->
			<div id="page3" style="display:none;">
				<div class="row">
					<div class="col-md-6">
						<label for="Picture">Profile Picture</label>
						<input type="file" name="Picture" class="form-control" accept="image/*" />
					</div>
					<div class="col-md-6">
						<label for="Document">Document</label>
						<input type="file" name="Document" class="form-control" accept="image/*" />
					</div>
				</div>

				<div class="row mt-2">
					<div class="col-md-6">
						<label for="Ir330Document">IR330 Document</label>
						<input type="file" name="Ir330Document" class="form-control" accept="image/*" />
					</div>
					<div class="col-md-6">
						<label for="SignPic">Signature Picture</label>
						<input type="file" name="SignPic" class="form-control" accept="image/*" />
					</div>
				</div>

				<div class="row mt-3">
					<div class="col-md-6">
						<button type="button" class="btn btn-secondary" onclick="goToPage(2)">&lt; Back</button>
					</div>
					<div class="col-md-6 text-end">
						<button type="submit" class="btn btn-success">Sign Up</button>
					</div>
				</div>
			</div>
		</form>
	</div>
		<div class="form-container sign-in-container">
		<form class="signinForm" method="post">
				<h1 class="h1">Sign in</h1>
			<select id="UserType" name="AccountType" class="form-style input" required>
					<option value="M">Monitor</option>
					<option value="S" selected>Supervisor</option>
					<option value="W">Worker</option>
					<option value="C">Grower</option>
				</select>
				<input type="email" name="Email" class="form-style input" placeholder="Your Email" id="logemail" autocomplete="off" required value="johndoe@example.com">

			<input type="password" name="Password" class="form-style input" placeholder="Your Password" id="logpass" autocomplete="off" required value="password123">
				<a class="a" href="#">Forgot your password?</a>
				<button class="button" type="submit">Sign In</button>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1 class="h1">Welcome Back!</h1>
					<p class="p">To keep connected with us please login with your personal info</p>
					<button class="button ghost" id="signIn">Sign In</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1 class="h1">Hello, Friend!</h1>
					<p class="p">Enter your personal details and start journey with us</p>
					<button class="button ghost" id="signUp">Sign Up</button>
				</div>
			</div>
		</div>
	</div>

	<script>
	const signUpButton = document.getElementById('signUp');
	const signInButton = document.getElementById('signIn');
	const container = document.getElementById('container');

	signUpButton.addEventListener('click', () => {
		container.classList.add("right-panel-active");
	});

	signInButton.addEventListener('click', () => {
		container.classList.remove("right-panel-active");
	});

	function goToPage(pageNumber) {
		const currentPage = document.querySelector(`#page${getCurrentPage()}`);
		const inputs = currentPage.querySelectorAll("input, select");
		let isValid = true;

		inputs.forEach(input => {
			if (!input.checkValidity()) {
				isValid = false;
				input.classList.add("is-invalid");
			} else {
				input.classList.remove("is-invalid");
			}
		});

		if (!isValid) return;

		// Hide all pages
		for (let i = 1; i <= 3; i++) {
			document.getElementById(`page${i}`).style.display = 'none';
		}
		// Show requested page
		document.getElementById(`page${pageNumber}`).style.display = 'block';
	}

	function getCurrentPage() {
		for (let i = 1; i <= 3; i++) {
			if (document.getElementById(`page${i}`).style.display !== 'none') return i;
		}
		return 1;
	}

</script>