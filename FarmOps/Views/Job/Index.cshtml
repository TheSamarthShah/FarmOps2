<div class="job-container">

    <h2>Create New Job</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="job-alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="job-alert-error">@ViewBag.ErrorMessage</div>
    }

    <div class="job-nav">
        <a href="@Url.Action("Create", "Job")">Add New Job</a>
        <a href="@Url.Action("Edit", "Job")">Edit Job</a>
        <a href="@Url.Action("Index", "Job")">View Jobs</a>
    </div>

    <form asp-controller="Job" asp-action="Index" method="post">
        @Html.AntiForgeryToken()

        <div class="job-form-group">
            <label for="JobId">Job ID</label>
            <input type="text" id="JobId" name="JobId" value="@Model.JobId" />
        </div>

        <div class="job-form-group">
            <label for="JobName">Job Name</label>
            <input type="text" id="JobName" name="JobName" value="@Model.JobName" />
        </div>

        <div class="job-form-group">
            <label for="JobCat">Job Category</label>
            <input type="number" id="JobCat" name="JobCat" value="@Model.JobCat" required />
        </div>

        <div class="job-form-group">
            <label for="GrowerId">Grower ID</label>
            <input type="number" id="GrowerId" name="GrowerId" value="@Model.GrowerId" required />
        </div>

        <div class="job-form-group">
            <label for="JobTitle">Job Title</label>
            <input type="text" id="JobTitle" name="JobTitle" value="@Model.JobTitle" required />
        </div>

        <div class="job-form-group">
            <label for="JobDescription">Job Description</label>
            <textarea id="JobDescription" name="JobDescription">@Model.JobDescription</textarea>
        </div>

        <div class="job-form-group">
            <label for="JobPostedDate">Job Posted Date</label>
            <input type="date" id="JobPostedDate" name="JobPostedDate"
                   value="@(Model.JobPostedDate?.ToString("yyyy-MM-dd"))" />
        </div>

        <div class="job-form-group">
            <label for="JobStatus">Job Status</label>
            <input type="text" id="JobStatus" name="JobStatus" value="@Model.JobStatus" />
        </div>

        <div class="job-form-group">
            <label for="JobPay">Job Pay</label>
            <input type="number" id="JobPay" name="JobPay" value="@Model.JobPay" required />
        </div>

        <div class="job-form-group">
            <label for="JobDuration">Job Duration (days)</label>
            <input type="number" id="JobDuration" name="JobDuration" value="@Model.JobDuration" required />
        </div>

        <div class="job-form-group">
            <label for="NumWorkers">Number of Workers</label>
            <input type="number" id="NumWorkers" name="NumWorkers" value="@Model.NumWorkers" required />
        </div>

        <button type="submit" class="job-submit-btn">Create Job</button>
    </form>
</div>
